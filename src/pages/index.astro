---
import FormatSection from '../components/FormatSection.astro'
import formats from '../data/formats.json'
import decks from '../data/decks.json'
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Michael's Yugioh Decks</title>
    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
  </head>
  <body class="bg-background text-text">
    <main class="container mx-auto p-4 mt-8">
      <h1 class="text-4xl font-bold text-center mb-12">Michael's Yugioh Decks</h1>
      {
        formats.map((format) => (
          <FormatSection
            title={format.title}
            logoUrl={format.logoUrl}
            decks={decks[format.id as keyof typeof decks]}
            isCollapsed={decks[format.id as keyof typeof decks].length === 0}
          />
        ))
      }
    </main>
  </body>
</html>
