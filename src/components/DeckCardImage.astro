---
interface Props {
  src: string
  alt: string
  width: number
  height: number
}

const { src, alt, width, height } = Astro.props
---

<div class="relative flex items-center justify-center overflow-hidden rounded-lg bg-gray-100/5">
  <img
    src={src}
    alt={alt}
    width={width}
    height={height}
    class="w-full h-auto transform transition-transform duration-300 group-hover:scale-110 text-[0px] relative z-50"
    loading="lazy"
  />
  <div class="absolute inset-0 flex items-center justify-center">
    <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" viewBox="0 0 24 24" class="opacity-50">
      <path
        fill="#fff"
        d="m21.47 4.35l-1.34-.56v9.03l2.43-5.86c.41-1.02-.06-2.19-1.09-2.61m-19.5 3.7L6.93 20a2.01 2.01 0 0 0 1.81 1.26c.26 0 .53-.05.79-.16l7.37-3.05c.75-.31 1.21-1.05 1.23-1.79c.01-.26-.04-.55-.13-.81L13 3.5a1.95 1.95 0 0 0-1.81-1.25c-.26 0-.52.06-.77.15L3.06 5.45a1.994 1.994 0 0 0-1.09 2.6m16.15-3.8a2 2 0 0 0-2-2h-1.45l3.45 8.34"
      ></path>
    </svg>
  </div>
</div>
